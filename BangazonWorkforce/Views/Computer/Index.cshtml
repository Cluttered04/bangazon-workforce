@model IEnumerable<BangazonWorkforce.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchString", "",new { placeholder = "Filter by make or manufacturer", style = "width:250px" }) <br />
    </p>
}




<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    <a href="@Url.Action("Details", new { id=item.Id})">@Html.DisplayFor(modelItem => item.Make)</a>

                </td>
                <td>
                    <a href="@Url.Action("Details", new { id=item.Id})">@Html.DisplayFor(modelItem => item.Manufacturer)</a>
                </td>

            </tr>
        }
    </tbody>
</table>
