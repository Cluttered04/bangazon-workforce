@model BangazonWorkforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

    @*Details view for employees, authored by Sable Bowen*@
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentDepartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentDepartment.Name)
        </dd>
        </dl>
        @*Display computer information if the employee is assigned one*@
        <h5>Current Computer</h5>
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentComputer.Make)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentComputer.Make)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentComputer.Manufacturer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentComputer.Manufacturer)
            </dd>
        </dl>
    </dl>

    @if (Model.TrainingPrograms != null)
    {

        //Displays multiple training programs if the employee has any
        <h5>Training Programs</h5>
        @foreach (var TrainingProgram in Model.TrainingPrograms)
        {
            <d1 class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(ModelItem => TrainingProgram.Id) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(ModelItem => TrainingProgram.Id)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(ModelItem => TrainingProgram.Name) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(ModelItem => TrainingProgram.Name)</dd>
            </d1>
        }
    }


</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
