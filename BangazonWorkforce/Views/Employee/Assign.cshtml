@model BangazonWorkforce.Models.ViewModels.AssignEmployeeViewModel

@{
    ViewData["Title"] = "Assign";
}

<h1>Assign</h1>

<h4>@Html.DisplayFor(model => model.employee.FirstName) @Html.DisplayFor(model => model.employee.LastName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="selectedTrainingProgramId" asp-items="@Model.TrainingPrograms"></select>
            </div>
            <div class="form-group">
                <input type="Submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
